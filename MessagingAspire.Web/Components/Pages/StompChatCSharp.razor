@page "/stomp-chat-cs"
@rendermode InteractiveServer
@inject MessagingAspire.Web.Services.StompTcpClient StompClient

<PageTitle>STOMP Chat (C#)</PageTitle>

<h1>RabbitMQ STOMP Chat (Pure .NET)</h1>

<div class="mb-3">
    <span class="badge @(connected ? "bg-success" : "bg-danger")">@(connected ? "Connected" : "Disconnected")</span>
    <small class="ms-2">@status</small>
</div>

@if (!connected)
{
    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input class="form-control" @bind="userName" />
            </div>
            <div class="mb-3">
                <label class="form-label">Host (optional override)</label>
                <input class="form-control" @bind="hostOverride" placeholder="localhost" />
                <small class="text-muted">Leave empty to use host from connection string.</small>
            </div>
            <div class="row g-2">
                <div class="col">
                    <input class="form-control" @bind="login" placeholder="login" />
                </div>
                <div class="col">
                    <input class="form-control" @bind="passcode" placeholder="passcode" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Connect">Connect</button>
            </div>
        </div>
    </div>
}
else
{
    <div class="card mb-3">
        <div class="card-body" style="height:350px; overflow-y:auto">
            @foreach (var m in messages)
            {
                <div class="border rounded p-2 mb-2 @(m.IsSystem ? "bg-light" : "bg-white")">
                    <strong class="@(m.IsSystem ? "text-muted" : "text-primary")">@m.User</strong>
                    <small class="text-muted ms-2">@m.Timestamp.ToLocalTime().ToString("HH:mm:ss")</small>
                    <div>@m.Text</div>
                </div>
            }
        </div>
    </div>
    <div class="input-group mb-3">
        <input class="form-control" @bind="outgoing" @bind:event="oninput" @onkeydown="HandleKey" placeholder="Type a message" />
        <button class="btn btn-primary" @onclick="Send" disabled="@string.IsNullOrWhiteSpace(outgoing)">Send</button>
        <button class="btn btn-outline-danger" @onclick="Disconnect">Disconnect</button>
    </div>
}

@code {
    private string userName = "User";
    private string hostOverride = string.Empty;
    private string login = "chatuser";
    private string passcode = "chatpass";
    private string status = "Idle";
    private string outgoing = string.Empty;
    private bool connected = false;
    private readonly List<MessagingAspire.Web.Services.ChatMessage> messages = new();

    protected override void OnInitialized()
    {
        StompClient.SystemEvent += OnSystemEvent;
        StompClient.MessageReceived += OnMessage;
    }

    private async Task Connect()
    {
        status = "Connecting...";
        await StompClient.ConnectAsync(userName, hostOverride == string.Empty ? null : hostOverride, login, passcode);
    }

    private async Task Disconnect()
    {
        status = "Disconnecting...";
        await StompClient.DisconnectAsync();
    }

    private async Task Send()
    {
        if (string.IsNullOrWhiteSpace(outgoing)) return;
        await StompClient.SendChatMessageAsync(userName, outgoing);
        outgoing = string.Empty;
    }

    private async Task HandleKey(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(outgoing))
        {
            await Send();
        }
    }

    private void OnSystemEvent(string info)
    {
        if (info.Contains("CONNECTED"))
        {
            connected = true;
            status = "Connected";
        }
        else if (info.Contains("Disconnected"))
        {
            connected = false;
            status = "Disconnected";
        }
        else if (info.StartsWith("Subscribed"))
        {
            status = info;
        }
        else if (info.StartsWith("Read loop error"))
        {
            status = info;
        }
        InvokeAsync(StateHasChanged);
    }

    private void OnMessage(MessagingAspire.Web.Services.ChatMessage msg)
    {
        messages.Add(msg);
        InvokeAsync(StateHasChanged);
    }

    public async ValueTask DisposeAsync()
    {
        StompClient.SystemEvent -= OnSystemEvent;
        StompClient.MessageReceived -= OnMessage;
        await StompClient.DisposeAsync();
    }
}
